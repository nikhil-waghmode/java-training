package patterns;
import java.util.Scanner;
/*
1
12
123
1234
12345 */

public class p2 {
	public static void main(String args[]) {
		System.out.println("Enter a number: ");
		Scanner sc = new Scanner(System.in);
		
		int n =sc.nextInt(), i, j;
		for (i =1;i<=n;i++) {
			for(j = 1;j<=(n-i);j++) {
				System.out.print(" ");
			}
			for(j = i;j>=1;j--) {
				System.out.print(i);
			}
			System.out.println();
		}
	}
}
