package patterns;
import java.util.Scanner;
/*
54321
5432
543
54
5
 */
public class p4 {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
				
		int i,j;
		for(i=1;i<=n;i++) {
			for(j=0;j>=(n-i);j--) {
				System.out.print(" ");
			}
			System.out.println();
		}
	}
}
